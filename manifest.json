{
  "manifest_version": 3,
  "name": "Page Auto Reloader",
  "version": "1.9.0",
  "description": "Automatically reload selected pages with flexible interval settings",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "sidePanel"
  ],
  "icons": {
    "16": "icon128.png",
    "48": "icon128.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon128-gray.png",
    "default_title": "Page Auto Reloader"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
